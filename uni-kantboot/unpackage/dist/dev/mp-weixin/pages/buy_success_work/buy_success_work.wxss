page {
  background-color: #FFF;
}
.not-to {
  width: 223rpx;
  font-size: 25rpx;
  text-align: center;
  color: #999999;
  margin-top: 50%;
  margin-left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.not-to image {
  width: 100%;
}
.box {
  position: relative;
  box-shadow: 0 5rpx 5rpx rgba(118, 118, 118, 0.1);
  width: 730rpx;
  height: 227rpx;
  padding: 20rpx;
}
.box .left {
  width: 360rpx;
  margin-left: 20rpx;
}
.box .left image {
  width: 177rpx;
  height: 227rpx;
}
.box .left .left_img {
  border-radius: 20rpx 0 0 20rpx;
  margin-right: 3rpx;
}
.box .left .right_img {
  border-radius: 0 20rpx 20rpx 0;
}
.box .right {
  position: absolute;
  width: 300rpx;
  left: 420rpx;
  top: 0rpx;
  font-size: 24rpx;
}
.box .right .title {
  width: 299rpx;
  height: 49rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 42rpx;
  margin-top: 10rpx;
}
.box .right .bottom {
  position: absolute;
  top: 200rpx;
}
.box .right .bottom .left2 {
  font-size: 24rpx;
  color: #999999;
}
.box .right .bottom .left2 text {
  color: #E5604B;
}
.box .right .bottom .edit_text {
  position: absolute;
  color: #4EC1FF;
  opacity: .9;
  width: 140rpx;
  font-size: 24rpx;
  position: absolute;
  top: 0;
  left: 180rpx;
}
.box .right .bottom .edit_text:active {
  opacity: .2;
}
.grid-text {
  font-size: 25rpx;
  padding: 0 0 10rpx 0;
}

