.back-image {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
}
.btn_images {
  position: absolute;
  z-index: 100000;
  bottom: 0;
  right: 50rpx;
}
.btn_images .btn_image {
  width: 200rpx;
  height: 200rpx;
}
.btn_images .btn_image:active {
  width: 180rpx;
  height: 180rpx;
  margin: 11rpx;
}
.cover_images {
  position: fixed;
  width: 100%;
  bottom: 200rpx;
}
.cover_images .cover_image_view {
  position: relative;
  border: 20rpx solid #42a1e8;
  background-color: #42a1e8;
  width: 100%;
  height: calc(50vh - 110px);
  box-shadow: 0 0rpx 40rpx rgba(118, 118, 118, 0.4), 0 20rpx 40rpx rgba(0, 0, 0, 0.4) inset;
  box-shadow: 20rpx 20rpx 60rpx #3889c5, -20rpx -20rpx 60rpx #4cb9ff;
  border-radius: 20rpx;
}
.cover_images .cover_image_view .cover_image {
  width: 100%;
  height: 100%;
  float: left;
  border-radius: 20rpx;
}
.cover_images .cover_image_view .cover_text {
  position: absolute;
  text-align: center;
  color: #F0F0F0;
  font-weight: 400;
  display: inline;
  z-index: 100;
  font-size: 25rpx;
  bottom: 0rpx;
  right: 0rpx;
  background-color: #42a1e8;
  padding: 5rpx 10rpx 2rpx 20rpx;
  border-radius: 20rpx 0 0rpx 0;
}

